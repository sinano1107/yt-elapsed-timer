{
  "manifest_version": 3,
  "name": "YouTube Elapsed Timer",
  "version": "1.0.0",
  "description": "YouTubeにアクセスしてからの経過時間を常に表示します。",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
